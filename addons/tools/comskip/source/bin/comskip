. /etc/profile

ADDON_DIR="/storage/.kodi/addons/tools.comskip"
USERDATA_DIR="/storage/.kodi/userdata/addon_data/tools.comskip"

mkdir -p $USERDATA_DIR

if [ -f $USERDATA_DIR/comskip.ini ]; then
  INI_FILE="$USERDATA_DIR/comskip.ini"
else
  INI_FILE="$ADDON_DIR/etc/comskip.ini"
fi

nice -n 10 comskip.bin --ini=$INI_FILE $@

